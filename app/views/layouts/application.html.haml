!!!
%html
  %head
    %title Carnegie Mellon Sigma Chi
    / stylesheets
    = stylesheet_link_tag 'application'

    / javascripts
    = javascript_include_tag 'application'

    / ga
    :javascript
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-39747559-1', 'cmusigmachi.org');
      ga('send', 'pageview');

    / csrf
    = csrf_meta_tags

  %body
    / header
    %header
      #header
        .wrap
          .translucent
          %a#logo{ :href => root_path }

          / main navigation
          = render partial: 'layouts/main_navigation'

    / content
    %section
      #wrapper
        .wrap
          #content
            = yield

    / clearfix
    .clear

    / footer
    %footer
      #footer
        .wrap
          - %w(resources events contact_us).each do |link|
            .column
              .content
                %h3= link.humanize
                = render partial: "layouts/footer/#{link}"

